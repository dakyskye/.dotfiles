[colours]
background = #282C34
foreground = #F8F8F2
focused = #A77AC4
active = #7197E7
urgent = #E06C75
coral = #FF8C61

[bar/primary]
monitor = HDMI-A-0
override-redirect = false
bottom = false
fixed-center = true

width = 100%
height = 20

background = ${colours.background}
foreground = ${colours.foreground}

font-0 = "JetBrains Mono:size=8:antialias=true"
font-1 = "Font Awesome 5 Free Solid:size=9:antialias=true"
font-2 = "DejaVu Serif:size=8:antialias=true"

modules-left = bspwm xwindow
modules-center =
modules-right = webcam sep pulseaudio sep xkeyboard sep time sep date emptysep

separator =

locale = en_GB.UTF-8

tray-position = right
tray-detached = false
tray-maxsize = 17
tray-background = ${root.background}
tray-padding = 0

click-left =
click-middle = 
click-right =
scroll-up = bspc desktop -f next.local.occupied
scroll-down = bspc desktop -f prev.local.occupied
double-click-left =
double-click-middle =
double-click-right =

[bar/secondary]
monitor = HDMI-A-1
override-redirect = false
bottom = false
fixed-center = true

width = 100%
height = 20

background = ${colours.background}
foreground = ${colours.foreground}

font-0 = "JetBrains Mono:size=8:antialias=true"
font-1 = "Font Awesome 5 Free Solid:size=9:antialias=true"
font-2 = "DejaVu Serif:size=8:antialias=true"

modules-left = bspwm
modules-right = memory sep cpu sep tempcpu sep tempgpu sep tempssd sep temphdd sep kernel sep updates sep installed sep webcam sep pulseaudio sep xkeyboard sep time sep date

locale = en_GB.UTF-8

click-left =
click-middle = 
click-right =
scroll-up = #bspwm.next
scroll-down = #bspwm.prev
double-click-left =
double-click-middle =
double-click-right =

[module/sep]
type = custom/text
content = " | "

[module/emptysep]
type = custom/text
content = " "

[module/bspwm]
type = internal/bspwm

pin-workspaces = true
enable-click = true
enable-scroll = false

ws-icon-default = 

format = <label-state> <label-mode>

label-empty = ""

label-focused = %name% %icon%
label-focused-background = ${colours.background}
label-focused-foreground = ${colours.focused}
label-focused-padding = 1

label-occupied = %icon%
label-occupied-background = ${self.label-focused-background}
label-occupied-foreground = ${colours.active}
label-occupied-padding = 0

label-urgent = %name% %icon%
label-urget-background = ${self.label-focused-background}
label-urget-foreground = ${colours.urgent}
label-urgent-padding = ${self.label-focused-padding}

label-tiled = 
label-tiled-foreground = ${colours.coral}
label-monocle = 
label-monocle-foreground = ${colours.coral}

[module/xwindow]
type = internal/xwindow

label = %title%
label-maxlen = 100

format-prefix = " "

[module/memory]
type = internal/memory

interval = 2

# todo: use bar or ramp
format = <label>

label =  %percentage_used%%

[module/cpu]
type = internal/cpu

interval = 2

# todo: use bar or ramp
format = <label> 

label =  %percentage%%

[module/tempcpu]
type = custom/script

exec = sensors | grep -A 8 k10temp-pci | awk '{ if ($1 == "Tdie:") { print $2 } }' | sed -nE 's/\+([0-9][0-9])\..*/\1/p'
tail = true
interval = 2

label = C %output%
format-prefix = " "
format-suffix = °C

[module/tempgpu]
inherit = module/tempcpu

exec = sensors | grep -A 6 amdgpu-pci | awk '{ if ($1 == "edge:") { print $2 } }' | sed -nE 's/\+([0-9]+)\..*/\1/p'

label = G %output%

[module/tempssd]
inherit = module/tempcpu

exec = nc 127.0.0.1 7634 | sed -nE 's/.*KINGSTON.*?\|([0-9]+)\|.*/\1/p'

label = S %output%

[module/temphdd]
inherit = module/tempcpu

exec = nc 127.0.0.1 7635 | sed -nE 's/.*SAMSUNG.*?\|([0-9]+)\|.*/\1/p'

label = H %output%

[module/kernel]
type = custom/script

exec = uname -r | cut -d '-' -f 1
tail = false

label =  %output%

[module/updates]
type = custom/script

exec = paru -Qu | wc -l
tail = true
interval = 1500

label =  %output%

[module/installed]
type = custom/script

exec = pacman -Qqe | wc -l
tail = true
interval = 3600

label =  %output%

[module/webcam]
type = custom/script

exec = fuser -s /dev/video0 && echo on || echo off
tail = true
interval = 1

label =  %output%

[module/pulseaudio]
type = internal/pulseaudio

use-ui-max = false
interval = 5

label-volume = %percentage%%
label-muted = %percentage%%

format-volume = <label-volume>
format-volume-prefix = " "

format-muted = <label-muted>
format-muted-prefix = ${self.format-volume-prefix}
format-muted-prefix-foreground = ${colours.urgent}

click-right = pavucontrol-qt

[module/xkeyboard]
type = internal/xkeyboard

blacklist-0 = num lock

format =  <label-layout><label-indicator>

label-layout = %layout%
label-indicator-on = " %name%"

[module/time]
type = internal/date

time = %H:%M

label =  %time%

[module/date]
type = internal/date

date = %A %d.%m.%Y

label =  %date%

