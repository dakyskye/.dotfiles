#	Repository: https://github.com/dakyskye/nimdowstatus
#

print_vol() {
	echo "$(pamixer --get-mute) $(pamixer --get-volume)"
}

print_vol

pactl subscribe | while read -r LINE; do
	echo "$LINE" | grep -qv "client" && print_vol
done
