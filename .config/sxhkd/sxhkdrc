# reload the sxhkd config
super + Escape
	pkill -USR1 -x sxhkd

# launch termite
super + Return
	termite

# launch rofi
super + d
	rofi -modi drun -show drun

# launch window switcher
super + Tab
	rofi -modi window -show window

# capture a window and copy to the clipboard
Print
	maim -so | xclip -selection clipboard -t image/png

# launch scr script
super + Print
	scr

# system operations / screen warmness menus
super + ctrl + {o,w}
	{sop,scw}

# change screen warmness
super + ctrl + {d,n}
	redshift -P -O {6500,4500}

# change the wallpaper
super + shift + w
	go run $HOME/.config/scripts/wallpapers.go
