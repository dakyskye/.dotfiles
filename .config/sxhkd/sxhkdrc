# reload the sxhkd config
super + Escape
	pkill -USR1 -x sxhkd

# launch termite
super + Return
	termite

# launch rofi
super + d
	rofi -modi drun -show drun

# launch neofetch
Print
	flameshot gui

# systemctl poweroff/reboot
super + ctrl + {p,r}
	{shutdown now,reboot}

# lock screen or log the user out
super + ctrl + {l,o}
	{blurlock,pkill -15 -U $USER}

# change the screen warmness
super + ctrl + {d,n}
	redshift -P -O {6500,4500}

# change the wallpaper
super + shift + w
	go run $HOME/.config/scripts/wallpapers.go
