################################################################################

[module/cpu]
type = internal/cpu
interval = 2

label = %percentage%%
label-font = 1
format = "CPU <label>"
format-prefix = " "
format-prefix-foreground = ${colours.2}
format-foreground = ${colours.2}
format-background = ${colours.9}

################################################################################

[module/date]
type = internal/date
interval = 5

date = %d.%m.%y
date-alt = %d.%m.%y
time = %H:%M
time-alt = %H:%M

label = "%date% %time% "
format-prefix = " "
format-prefix-foreground = ${colours.2}
format-foreground = ${colours.2}
format-background = ${colours.13}

################################################################################

[module/memory]
type = internal/memory
interval = 2

label = %percentage_used%%
format = "RAM <label>"
format-prefix = " "
format-prefix-foreground = ${colours.2}
format-foreground = ${colours.2}
format-background = ${colours.8}

################################################################################

[module/pacman-updates]
type = custom/script
exec = "pacman -Qu | wc -l"
interval = 1000

label = pacman -Qu: %output%
format-prefix = " "
format-prefix-foreground = ${colours.2}
format-foreground = ${colours.2}
format-background = ${colours.12}

################################################################################

[module/temperature]
type = custom/script
exec = go run ~/.config/polybar/scripts/temperature.go
tail = true

click-left = curl -d "task=next" http://localhost:9096
click-right = curl -d "task=current" http://localhost:9096

label = "%output% "
format-prefix = " "
format-prefix-foreground = ${colours.2}
format-foreground = ${colours.2}
format-background = ${colours.7}

################################################################################

[module/pavolume]
type = custom/script
exec = ~/.config/polybar/scripts/pavolume.sh --listen
tail = true

click-right = exec pavucontrol-qt &
click-left = ~/.config/polybar/scripts/pavolume.sh --togmute
scroll-up = ~/.config/polybar/scripts/pavolume.sh --up
scroll-down = ~/.config/polybar/scripts/pavolume.sh --down

label = %output%
format-prefix-foreground = ${colours.2}
format-foreground = ${colours.2}
format-background = ${colours.3}

################################################################################

[module/xkeyboard]
type = internal/xkeyboard

blacklist-0 = num lock

label-layout = %layout%
label-indicator-on = " %name%"
format = <label-layout><label-indicator>
format-prefix = " "
format-foreground = ${colours.2}
format-background = ${colours.4}

################################################################################

[module/kernel]
type = custom/script
exec = uname -r
interval = 1024

label = "%output%"
format-prefix = "  "
format-prefix-foreground = ${colours.2}
format-foreground = ${colours.2}
format-background = ${colours.11}

################################################################################

[module/xwindow]
type = internal/xwindow

label = %title%
label-maxlen = 130
label-font = 2

format-foreground = ${colours.2}

################################################################################

